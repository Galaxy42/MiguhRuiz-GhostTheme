{{!< default}}

<main class="content" role="main">

    {{#foreach posts}}

    <article class="preview">
        {{#if image}}
        <div class="preview-image">
            <a href="{{url}}" title="{{title}}"><p><img src="{{image}}" alt="Featured" /></p></a>
        </div>
        {{/if}}
        <header>
            <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
            <div class="post-meta"><time datetime="{{date format='DD-MM-YYYY'}}">{{date format="dddd, DD MMMM, YYYY"}}</time></div>
        </header>
        <section class="post-excerpt">
            <p>{{excerpt}}&hellip;</p>
            <p class="readmore"><a href="{{url}}">Leer m√°s <i class="fa fa-chevron-circle-right"></i></a></p>
        </section>
    </article>

    {{/foreach}}

    {{pagination}}

</main>
