{{!< default}}
{{#post}}
<main class="content" role="main">
    {{#if image}}
    <div class="post-background">
        <div class="image" style="background-image: url({{image}});"></div>
    </div>
    <header class="post-header">
        <h1 class="post-title">{{{title}}}</h1>
        <div class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time></div>
    </header>

    {{/if}}

    <article class="{{post_class}} {{#unless image}}no-post-header{{/unless}}">
        {{#unless image}}
        <header>
            <h1 class="post-title">{{{title}}}</h1>
            <div class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time></div>
        </header>
        {{/unless}}
        <section class="post-content">
            {{content}}
        </section>

        {{#if @labs.subscribers}}
          <section class="gh-subscribe email">
           <h4 class="gh-subscribe-title">¿Te ha gustado este artículo? Tengo mucho más para ti esperándote.</h3>
           <h5>Solo necesitas incribirte en mi lista de correo. Obtén los artículos simple y rápidamente.</p>
           {{subscribe_form placeholder="Email"}}
           <span class="gh-subscribe-rss">O suscríbete <a href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/">via RSS</a> con Feedly!</span>
         </section>
       {{/if}}
        <section class="email">
          <link href="//cdn-images.mailchimp.com/embedcode/classic-10_7.css" rel="stylesheet" type="text/css">
          <style type="text/css">
	         #mc_embed_signup{background:#fff; clear:left; font:20px 'Open Sans Condensed', 'Open Sans', 'Helvetica Neue', Helvetica, Arial, 'Nimbus L', sans-serif; }
           </style>
           <div id="mc_embed_signup">
             <form action="//x10.us8.list-manage.com/subscribe/post?u=7812038beb141756f5c51f11f&amp;id=8723449fb1" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
               <div id="mc_embed_signup_scroll">
                  <h4>¿Te ha gustado este artículo? Tengo mucho más para ti esperándote.</h4>
                  <h5>Solo necesitas incribirte en mi lista de correo. Obtén los artículos simple y rápidamente.</h5>
                  <div class="mc-field-group">
	                    <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="Email">
                    </div>
	                   <div id="mce-responses" class="clear">
		                     <div class="response" id="mce-error-response" style="display:none"></div>
		                       <div class="response" id="mce-success-response" style="display:none"></div>
	                        </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                          <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_7812038beb141756f5c51f11f_8723449fb1" tabindex="-1" value=""></div>
                          <center>
                          <div class="clear"><input type="submit" value="Enviar" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
                        </center>
                        </div>
                      </form>
                    </div>
        </section>

        <footer class="post-footer">

            {{#if author}}
            <section class="author">
                <div class="authorimage" style="background: url({{author.image}})"></div>
                <p class="attr">Escrito por...</p>
                <h4><a href="{{author.website}}">{{author.name}}</a></h4>
                <p class="bio">{{author.bio}}</p>
                {{#if tags}}<div class="tags">Este artículo está relacionado con {{tags}}</div>{{/if}}
            </section>
            {{/if}}

        </footer>



        {{> comments-disqus}}
        {{!> comments-facebook}}
        {{!> comments-google-plus}}
    </article>

    <aside class="read-next">
        {{#next_post}}
        <a class="read-next-story no-cover" href="{{url}}">
            <section class="post">
                <h2>{{title}}</h2>
                <p>{{excerpt words="19"}}&hellip;</p>
            </section>
        </a>
        {{/next_post}}
        {{#prev_post}}
        <a class="read-next-story prev no-cover" href="{{url}}">
            <section class="post">
                <h2>{{title}}</h2>
                <p>{{excerpt words="19"}}&hellip;</p>
            </section>
        </a>
        {{/prev_post}}
    </aside>
</main>
{{/post}}

<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-56c9a37fb20ed9c0"></script>
